---
import { SEO } from "astro-seo";

const {
  title = "Daniel Esteves | Senior Frontend Engineer",
  description = "Senior Frontend Engineer. Web developer since 16. Passionate about tech, learning, and empowering LATAM through knowledge sharing.",
  useTitleTemplate = false,
  image = `https://api.screenshothis.com/v1/screenshots/take?api_key=ss_live_jRNSxQeqoZAfIZlqGOmzEAOlValCYtNIAlcPlmEbyGjvECgQHKCOJpMBTFTOjRAQ&url=${encodeURIComponent(Astro.url.toString())}&width=1200&height=630&block_ads=true&block_cookie_banners=true&block_trackers=true&prefers_color_scheme=light&is_cached=true`,
  ...rest
} = Astro.props;
---

<SEO
  description={description}
  title={title}
  titleTemplate={useTitleTemplate && "%s — Daniel Esteves"}
  {...rest}
  openGraph={{
    basic: {
      title: useTitleTemplate ? `${title} — Daniel Esteves` : "Daniel Esteves | Senior Frontend Engineer",
      image,
      type: "website",
    },
    optional: {
      description,
      siteName: useTitleTemplate ? `${title} — Daniel Esteves` : "Daniel Esteves | Senior Frontend Engineer",
      locale: "en_US",
    },
  }}
  twitter={{
    card: "summary_large_image",
    creator: "@danestves",
    description,
    image,
    imageAlt: "Daniel Esteves",
    site: "@danestves",
    title: useTitleTemplate ? `${title} — Daniel Esteves` : "Daniel Esteves | Senior Frontend Engineer",
  }}
/>
